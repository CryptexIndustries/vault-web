{
    "name": "cryptex-vault-web",
    "private": true,
    "packageManager": "pnpm",
    "workspaces": [
        "web/*",
        "extension/*",
        "packages/*"
    ],
    "scripts": {
        "dev:web": "pnpm --filter web dev",
        "dev:ext": "pnpm --filter extension dev",
        "build:web": "pnpm --filter web build",
        "build:ext": "pnpm --filter extension build",
        "build": "pnpm build:web && pnpm build:ext",
        "lint:web": "pnpm --filter web lint-next",
        "lint:ext": "pnpm --filter extension lint",
        "lint": "pnpm lint:web && pnpm lint:ext",
        "lint-tsc:web": "pnpm --filter web lint-tsc",
        "test": "pnpm jest",
        "coverage": "pnpm jest --coverage"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3",
        "@jest/globals": "^29.7.0",
        "@types/node": "^20",
        "eslint": "^9",
        "eslint-config-next": "15.3.1",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "prettier": "^3.4.2",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "ts-jest": "^29.3.2",
        "ts-node": "^10.9.2",
        "typescript": "5.9.0-beta"
    }
}
